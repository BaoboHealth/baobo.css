{
  "name": "beibocss",
  "version": "0.0.1",
  "homepage": "https://beibohealth.github.io/beibo.css/",
  "author": "BeiboHealth <beibaohealth@outlook.com>",
  "description": "Beibo CSS framework",
  "main": "beibo.sass",
  "style": "Beibo/css/beibo.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BeiboHealth/beibo.css.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/BeiboHealth/beibo.css/issues"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.0",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-autoprefix",
    "build-autoprefix": "postcss --use autoprefixer --map false --output css/beibo.css css/beibo.css",
    "build-clean": "rimraf css",
    "build-sass": "node-sass --output-style expanded --source-map true beibo.sass css/beibo.css",
    "deploy": "npm run build && npm run docs",
    "docs": "npm run docs-sass && npm run docs-autoprefix",
    "docs-autoprefix": "postcss --use autoprefixer --map false --output docs/css/beibo-docs.css docs/css/beibo-docs.css",
    "docs-sass": "node-sass --output-style expanded docs/beibo-docs.sass docs/css/beibo-docs.css",
    "start": "npm run build-sass -- --watch",
    "start-docs": "npm run docs-sass -- --watch",
    "start-test": "npm run test-sass -- --watch",
    "test-sass": "node-sass --output-style expanded docs/beibo-test.sass docs/css/beibo-test.css"
  },
  "files": [
    "css",
    "sass",
    "beibo.sass",
    "LICENSE",
    "README.md"
  ]
}
